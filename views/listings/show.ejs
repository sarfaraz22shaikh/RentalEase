<% layout('/layouts/boilerplate') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h1>
                <%=listing.title%>
            </h1>
        </div>
        <div class="col-5 offset-2">
            <div class="card">
                <img style="height: 15rem;" src=<%=listing.image.url%> class="card-img-top show-img " alt="...">
                <div class="card-body">
                    Owned By :-
                    <%=listing.Owner.username%>
                        <br>
                        <%=listing.description%> <br> &#8377;
                            <%=listing.price.toLocaleString('en-IN')%> <br>
                                <%=listing.location%> <br>
                                    <%=listing.country%> <br>
                                        </p>
                                        <% if( currentUser && currentUser._id.equals(listing.Owner._id) ){ %>
                                            <div class="btns" style="display:flex">
                                                <a class="btn btn-add " href="/listings/<%=listing._id%>/edit">Edit This</a>
                                                <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
                                                    <button style="margin-left: 1rem;" class="btn btn-dark " type="submit">Delete</button>
                                                </form>
                                            </div>
                                            <% } %>
                </div>
            </div>
        </div>

        <% if(currentUser) { %>
            <div class="row mt-3 col-8 offset-2">
                <h4>Leave a review</h4>
                <form class="needs-validation" action="/listings/<%= listing._id %>/reviews" method="POST" novalidate>
                    <div class="mb-3">
                        <label for="range1" class="form-label">Rating</label>
                        <fieldset class="starability-slot">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea class="form-control" id="comment" name="review[comment]" rows="5" cols="5" required></textarea>
                        <div class="invalid-feedback">
                            comments cannot be empty
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info mb-3">Submit</button>
                </form>
                <hr>
            </div>
            <% } %>

                <div class="row offset-2 mb-3 col-6 ">
                    <h4> All reviews:- </h4>
                    <% for(  review of listing.reviews ){ %>
                        <div class=" mt-3 ms-3 col-5 bg-body-secondary" style=" border: 1px , solid , black;">
                            <h5 class="card-title">

                                <%='@'+review.author.username%>
                            </h5>
                            <p class="starability-result" data-rating=<%=review.rating%>></p>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <form class="mb-3" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-primary btn-sm">delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>


    </div>