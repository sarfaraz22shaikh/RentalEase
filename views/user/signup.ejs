<% layout('/layouts/boilerplate') -%>
    <div class="row">
        <div class="col-8 offset-2">
            <h1>Signup wanderlust</h1>

            <form class="needs-validation" method="POST" action="/signup" novalidate>

                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input type="text" class="form-control" name="username" placeholder="Username" required>
                    <div class="invalid-feedback">
                        select valid username
                    </div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" required>
                </div>

                <div class="mb-3">
                    <label for="passward" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="password" required>
                </div>

                <button type="submit" class="btn btn-dark btn-add">Sign up</button>
            </form>


        </div>
    </div>